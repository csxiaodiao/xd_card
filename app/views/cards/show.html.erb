
<%= wechat_config_js debug: false, api: %w(hideMenuItems closeWindow) -%>


<div class="ui container ">
  <div class="ui grid">
    <div class="sixteen wide column" style="padding:0px">
      <img class="ui fluid image" src="/images/bg_h.png">
    </div>
    <div class="sixteen wide column">
      <% ["er", "mb", "xf", "zj", "zz"].each do|item|%>
        <%if @received_cards.include?(item)%>
          <img class="ui fluid image" src="<%= "/images/#{item}d.png"%>">
        <%else%>
          <img class="ui fluid image xd_card" data-kind="<%= "#{item}"%>" src="<%= "/images/#{item}.png"%>">
        <%end%>
      <% end %>

    </div>
    <div class="sixteen wide column" style="padding:0px">
      <img class="ui fluid image" src="/images/bg_f.png">
    </div>
  </div>
</div>

<div class="js_dialog" id="notice" style="display: none;">
    <div class="weui-mask"></div>
    <div class="weui-dialog">
        <div class="weui-dialog__bd receive_notice">好的</div>
        <div class="weui-dialog__ft">
            <a href="javascript:" class="weui-dialog__btn weui-dialog__btn_primary">好的</a>
        </div>
    </div>
</div>


